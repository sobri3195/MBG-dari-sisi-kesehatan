{
  "name": "mbg-health-security-system",
  "version": "1.0.0",
  "description": "Sistem Pengamanan Kesehatan MBG - Comprehensive Health Security System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "start": "cd server && npm start",
    "test": "echo \"Tests will be run from client and server directories\"",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "health",
    "security",
    "mbg",
    "medical",
    "screening"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
